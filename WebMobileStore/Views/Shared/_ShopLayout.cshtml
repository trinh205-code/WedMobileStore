
    <!DOCTYPE html>
    <html lang="vi">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - TechStore</title>
        <link rel="stylesheet" href="~/css/m.css" asp-append-version="true">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    </head>
        <body>
        <!-- Header -->
        <header>
            <div class="header-container">
                <a asp-controller="Home" asp-action="Index" class="logo">🛒 TechStore</a>
                <form action="/Search" method="get" class="search-box">
                    <input type="text" name="keyword" placeholder="Tìm kiếm điện thoại, laptop, phụ kiện..." value="@ViewBag.Keyword" />
                    <button type="submit">Tìm</button>
                </form>


                <div class="header-actions">
                @await Component.InvokeAsync("CartCount")

                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="user-menu">
                            <img src="~/image/icons8-account-30.png" alt="Avatar" class="user-avatar" />
                            <span>@User.Identity.Name</span>
                            <div class="dropdown">
                                <a asp-controller="User" asp-action="Profile">Tài khoản</a>
                                <a asp-controller="CheckOut" asp-action="Index">Đơn hàng</a>
                                <a asp-controller="User" asp-action="Logout">Đăng xuất</a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <a asp-controller="User" asp-action="Login" class="login-link">
                            <img src="~/image/icons8-account-30.png" alt="Avatar" class="user-avatar" />
                            <span>Đăng nhập</span>
                        </a>
                    }
                </div>
            </div>

        @RenderSection("Styles", required: false)
        </header>

        <!-- Navigation -->
   

        <!-- Main Content -->
        @RenderBody()

        <!-- Footer -->
        <footer>
            <div class="footer-container">
                <div class="footer-section">
                    <h3>Về chúng tôi</h3>
                    <a href="#">Giới thiệu công ty</a>
                    <a href="#">Tuyển dụng</a>
                    <a href="#">Liên hệ</a>
                </div>
                <div class="footer-section">
                    <h3>Chính sách</h3>
                    <a href="#">Chính sách bảo hành</a>
                    <a href="#">Chính sách đổi trả</a>
                    <a href="#">Chính sách vận chuyển</a>
                </div>
                <div class="footer-section">
                    <h3>Hỗ trợ khách hàng</h3>
                    <a href="#">Hotline: 1900 xxxx</a>
                    <a href="#">Email: support@techstore.vn</a>
                    <a href="#">FAQ</a>
                </div>
                <div class="footer-section">
                    <h3>Theo dõi chúng tôi</h3>
                    <a href="#">📘 Facebook</a>
                    <a href="#">📸 Instagram</a>
                    <a href="#">📺 YouTube</a>
                </div>
            </div>
        </footer>


    <div class="modal" id="cartModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>🛍️ Giỏ hàng của bạn</h2>
                <span class="close-modal" onclick="closeCart()">&times;</span>
            </div>

            <div id="cartBody">
                <div id="cartItems"></div>

                <div class="cart-summary">
                    <div class="cart-total"><span>Tạm tính:</span><span id="subtotal">0đ</span></div>
                    <div class="cart-total"><span>Phí vận chuyển:</span><span id="shippingFee">30.000đ</span></div>
                    <div class="cart-total total"><span>Tổng cộng:</span><span id="totalPrice">0đ</span></div>
                </div>

                <div class="cart-actions">
                    <button class="clear-cart-btn">Xóa tất cả</button>
                    <a asp-controller="Order" asp-action="checkout" class="checkout-btn">Thanh toán</a>
                </div>
            </div>
        </div>

        <div id="cartToast" class="cart-toast"></div>
    </div>



    <!-- Toast -->
    @* <div id="cartToast" class="cart-toast" style="display:none;"></div> *@
        <script src="~/lib/jquery/dist/jquery.min.js"></script>

        <script src="~/js/m.js" asp-append-version="true"></script>


        @await RenderSectionAsync("Scripts", required: false)

    
    </body>
    </html>