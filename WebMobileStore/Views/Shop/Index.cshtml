@{
    ViewBag.Title = "Trang chủ";
    Layout = "_ShopLayout";
}

<!-- Banner -->
<div class="banner">
    <h1>🔥 FLASH SALE CUỐI TUẦN</h1>
    <p>Giảm giá đến 50% - Miễn phí vận chuyển toàn quốc</p>
</div>

<!-- Categories -->
<div class="section">
    <div class="categories">
        <div class="category-card">
            <div class="category-icon">📱</div>
            <div>Điện thoại</div>
        </div>
        <div class="category-card">
            <div class="category-icon">💻</div>
            <div>Laptop</div>
        </div>
        <div class="category-card">
            <div class="category-icon">🎧</div>
            <div>Tai nghe</div>
        </div>
        <div class="category-card">
            <div class="category-icon">⌚</div>
            <div>Smartwatch</div>
        </div>
        <div class="category-card">
            <div class="category-icon">📷</div>
            <div>Camera</div>
        </div>
        <div class="category-card">
            <div class="category-icon">🖱️</div>
            <div>Chuột</div>
        </div>
    </div>
</div>

<!-- Flash Sale Section -->
<div class="section">
    <div class="section-header">
        <h2>⚡ Flash Sale</h2>
        <div class="flash-sale-timer">Kết thúc sau: 02:45:30</div>
    </div>
    <div class="product-grid" id="productsContainer"></div>
</div>

<!-- Recommended Section -->
<div class="section">
    <div class="section-header">
        <h2>🌟 Gợi ý cho bạn</h2>
    </div>
    <div class="product-grid" id="recommendedContainer"></div>
</div>