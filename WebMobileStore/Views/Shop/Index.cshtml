@model WebMobileStore.ViewModels.HomeViewModel

@{
    ViewBag.Title = "Trang chủ";
    Layout = "_ShopLayout";
}

<!-- Banner -->
<div class="banner">
    <h1>🔥 FLASH SALE CUỐI TUẦN</h1>
    <p>Giảm giá đến 50% - Miễn phí vận chuyển toàn quốc</p>
</div>

<!-- Categories -->
<div class="section">
    <div class="categories">
        <div class="category-card">
            <div class="category-icon">📱</div>
            <div>Điện thoại</div>
        </div>
        <div class="category-card">
            <div class="category-icon">💻</div>
            <div>Laptop</div>
        </div>
        <div class="category-card">
            <div class="category-icon">🎧</div>
            <div>Tai nghe</div>
        </div>
        <div class="category-card">
            <div class="category-icon">⌚</div>
            <div>Smartwatch</div>
        </div>
        <div class="category-card">
            <div class="category-icon">📷</div>
            <div>Camera</div>
        </div>
        <div class="category-card">
            <div class="category-icon">🖱️</div>
            <div>Chuột</div>
        </div>
    </div>
</div>

<div class="section">
    <div class="section-header">
        <h2>🎉 Sản phẩm mới về</h2>
        <a asp-controller="Shop" asp-action="NewArrivals" class="view-all">Xem tất cả →</a>
    </div>
    @await Html.PartialAsync("ProductsCartNew", Model.NewProducts)
</div>

<!-- Top Selling Section -->
<div class="section">
    <div class="section-header">
        <h2>🔥 Bán chạy nhất</h2>
        <a asp-controller="Shop" asp-action="BestSellers" class="view-all">Xem tất cả →</a>
    </div>
    @await Html.PartialAsync("_ProductGrid", Model.TopSellingProducts)
</div>
