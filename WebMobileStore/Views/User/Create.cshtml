@if (ViewBag.RegisterError != null)
{
    <p class="error">@ViewBag.RegisterError</p>
}


<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Form Tạo Tài Khoản</title>
    <link rel="stylesheet" href="~/css/user.css">
</head>
<body>
    <div class="form-container">
        <form asp-controller="User" asp-action="Create" method="post">
            <div class="input-box">
                <h1>Đăng ký tài khoản</h1>  

                <div class="field">
                    <label for="fullname" class="req">Họ và tên</label>
                    <input type="text" id="fullname" name="fullname" placeholder="Nguyễn Văn A" required autocomplete="name" minlength="2" />
                </div>

                <div class="field">
                    <label for="email" class="req">Email</label>
                    <input type="email" id="email" name="email" placeholder="you@example.com" required autocomplete="email" />
                </div>

                <div class="field">
                    <label for="password" class="req">Mật khẩu</label>
                    <input type="password" id="password" name="password" placeholder="Tối thiểu 5 ký tự" required minlength="5" autocomplete="new-password" />
                    <div class="pw-hint">
                        <div class="bars" aria-hidden="true">
                            <div class="bar"></div>
                            <div class="bar"></div>
                            <div class="bar"></div>
                        </div>
                    </div>
                </div>


                <div class="field">
                    <label for="confirm" class="req">Nhập lại mật khẩu</label>
                    <input type="password" id="confirm" name="confirm" placeholder="Nhập lại mật khẩu" required autocomplete="new-password" minlength="5" />
                </div>


                <div style="display:flex;justify-content:space-between;align-items:center;margin-top:10px">
                    <a asp-controller="User" asp-action="Login" class="small">
                        Đã có tài khoản? <span style="color:#007bff; font-weight:500;">Đăng nhập</span>
                    </a>
                    <button class="btn" type="submit">Tạo tài khoản</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>