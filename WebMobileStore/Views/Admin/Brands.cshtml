@model IEnumerable<WebMobileStore.Models.Entity.Brand>

@{
    ViewBag.Title = "Quản lý thương hiệu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/css/brand.css" />
}


<div class="page-content">
    @Html.AntiForgeryToken()

    <div class="page-header">
        <h2 class="page-title">Quản lý thương hiệu</h2>
        <a asp-controller="Admin" asp-action="AddBrand" class="btn-primary">
            ➕ Thêm thương hiệu
        </a>
    </div>

    <div class="filter-bar">
        <form method="get" class="brand-filter-bar">
            <input type="text" name="searchTerm" placeholder="Tìm thương hiệu..."
                   value="@Context.Request.Query["searchTerm"]" class="brand-filter-search" />

            <select name="categoryId" class="brand-filter-select">
                <option value="">-- Tất cả danh mục --</option>
                @foreach (var c in (IEnumerable<WebMobileStore.Models.Entity.Categories>)ViewBag.Categories)
                {
                    <option value="@c.CategoryId"
                            selected="@(Context.Request.Query["categoryId"] == c.CategoryId.ToString() ? "selected" : null)">
                        @c.CategoryName
                    </option>

                }
            </select>

            <button type="submit" class="brand-filter-btn">Tìm kiếm</button>
        </form>

    </div>


    <div class="table-card">
        @if (Model != null && Model.Any())
        {
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ảnh</th>
                        <th>Tên thương hiệu</th>
                        <th>Danh mục</th>
                        <th>Mô tả</th>
                        <th>Số sản phẩm</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var brand in Model)
                    {
                        <tr>
                            <td>@brand.BrandId</td>
                            <td>
                                @if (!string.IsNullOrEmpty(brand.Image))
                                {
                                    <img src=@brand.Image" alt="@brand.BrandName" width="60" height="60" style="object-fit:cover;border-radius:8px;" />
                                }
                                else
                                {
                                    <img src="~/images/no-image.png" alt="Không có ảnh" width="60" height="60" style="object-fit:cover;border-radius:8px;" />
                                }
                            </td>
                            <td>@brand.BrandName</td>
                            <td>@brand.Category?.CategoryName</td>
                            <td>@brand.Description</td>
                            <td>@(brand.Products?.Count() ?? 0)</td>
                            <td>
                                <a asp-controller="Admin" asp-action="EditBrand" asp-route-id="@brand.BrandId" class="action-btn edit">Sửa</a>
                                <button class="action-btn delete" onclick="deleteBrand(@brand.BrandId)">Xóa</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <p>🏷️ Chưa có thương hiệu nào</p>
                <a asp-controller="Admin" asp-action="AddBrand" class="btn-primary">Thêm thương hiệu đầu tiên</a>
            </div>
        }
    </div>

    @if (ViewBag.TotalPages > 1)
    {
        <div class="pagination-container">
            <ul class="pagination">

                @if (ViewBag.CurrentPage > 1)
                {
                    <li>
                        <a href="@Url.Action("Brands", new { page = ViewBag.CurrentPage - 1 })">« Trước</a>
                    </li>
                }

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="@(i == ViewBag.CurrentPage ? "active" : "")">
                        <a href="@Url.Action("Brands", new { page = i })">@i</a>
                    </li>
                }

                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                    <li>
                        <a href="@Url.Action("Brands", new { page = ViewBag.CurrentPage + 1 })">Sau »</a>
                    </li>
                }

            </ul>
        </div>
    }

</div>

<script>
    function deleteBrand(id) {
        if (confirm("Bạn có chắc muốn xoá thương hiệu này không?")) {
            // Lấy token từ input ẩn được render bởi @Html.AntiForgeryToken()
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            fetch(`/Admin/DeleteBrand/${id}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token
                }
            }).then(res => {
                if (res.ok) {
                    alert("✅ Đã xoá thương hiệu thành công!");
                    location.reload();
                } else {
                    alert("❌ Xoá thất bại (HTTP " + res.status + ")");
                }
            }).catch(err => {
                alert("Lỗi mạng: " + err);
            });
        }
    }
</script>
