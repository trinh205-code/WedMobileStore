@model WebMobileStore.Models.Entity.Categories
@{
    ViewBag.Title = "Thêm loại sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content">
    <h2 class="page-title">Thêm loại sản phẩm mới</h2>
    <div class="form-card">
        <form asp-controller="Admin" asp-action="AddCategory" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="CategoryName" class="form-label">Tên loại sản phẩm</label>
                <input asp-for="CategoryName" class="form-input" placeholder="VD: Điện thoại" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <button type="submit" class="submit-btn">Thêm</button>
            <a asp-controller="Category" asp-action="Index" class="cancel-btn">Hủy</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
