@model WebMobileStore.Models.Entity.ProductVariant

@{
    ViewData["Title"] = "Thêm Chi tiết Sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h2>Thêm biến thể sản phẩm</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Color">Màu sắc</label>
        <input asp-for="Color" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Storage">Dung lượng</label>
        <select asp-for="Storage" class="form-control">
            <option>128GB</option>
            <option>256GB</option>
            <option>512GB</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Price">Giá bán</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CompareAtPrice">Giá gốc</label>
        <input asp-for="CompareAtPrice" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Quantity">Số lượng</label>
        <input asp-for="Quantity" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ProductId">Sản phẩm</label>
        <select asp-for="ProductId" asp-items="ViewBag.ProductId" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
