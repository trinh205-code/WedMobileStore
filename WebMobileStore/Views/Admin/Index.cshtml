
<head>
    <meta charset="UTF-8">

    <title>Admin Dashboard - CoreUI</title>
    <link rel="stylesheet" href="~/css/ad.css">
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="logo">🔷 COREUI</div>
        </div>

        <div class="menu-section">
            <div class="menu-item active" data-page="dashboard">
                <span>📊</span>
                <span>Dashboard</span>
            </div>
        </div>

        <div class="menu-section">
            <div class="menu-title">Quản lý sản phẩm</div>
            <div class="menu-item" data-page="products">
                <span>📱</span>
                <span>Danh sách sản phẩm</span>
            </div>
            <div class="menu-item" data-page="add-product">
                <span>➕</span>
                <span>Thêm sản phẩm</span>
            </div>
            <div class="menu-item" data-page="categories">
                <span>📂</span>
                <span>Danh mục</span>
            </div>
        </div>

        <div class="menu-section">
            <div class="menu-title">Bán hàng</div>
            <div class="menu-item" data-page="orders">
                <span>🛒</span>
                <span>Đơn hàng</span>
                <span class="badge">12</span>
            </div>
            <div class="menu-item" data-page="customers">
                <span>👥</span>
                <span>Khách hàng</span>
            </div>
        </div>

        <div class="menu-section">
            <div class="menu-title">Hệ thống</div>
            <div class="menu-item" data-page="settings">
                <span>⚙️</span>
                <span>Cài đặt</span>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Header -->
        <div class="header">
            <div class="header-left">
                <div class="menu-toggle" onclick="toggleSidebar()">☰</div>
                <div class="breadcrumb">
                    <a href="#" onclick="showPage('dashboard')">Home</a>
                    <span>/</span>
                    <span>Dashboard</span>
                </div>
            </div>
            <div class="header-right">
                <div class="header-icon">🔔</div>
                <div class="header-icon">📋</div>
                <div class="header-icon">✉️</div>
                <div class="header-icon" onclick="toggleDarkMode()">🌙</div>
                <div class="user-avatar">AD</div>
            </div>
        </div>

        <!-- Dashboard Content -->
        <div class="dashboard-content">
            <!-- Dashboard Page -->
            <div class="page-content active" id="page-dashboard">
                <!-- Stats Cards -->
                <div class="stats-grid">
                    <div class="stat-card purple">
                        <div class="stat-header">
                            <div>
                                <div class="stat-title">Users</div>
                                <div class="stat-value">26K</div>
                            </div>
                            <div class="stat-change down">-12.4% ↓</div>
                        </div>
                        <svg class="mini-chart" viewBox="0 0 200 60">
                            <polyline points="0,40 40,35 80,30 120,45 160,25 200,50"
                                      fill="none" stroke="#5856d6" stroke-width="2" />
                        </svg>
                    </div>

                    <div class="stat-card blue">
                        <div class="stat-header">
                            <div>
                                <div class="stat-title">Income</div>
                                <div class="stat-value">$6,200</div>
                            </div>
                            <div class="stat-change up">40.9% ↑</div>
                        </div>
                        <svg class="mini-chart" viewBox="0 0 200 60">
                            <polyline points="0,50 40,45 80,35 120,40 160,20 200,25"
                                      fill="none" stroke="#2eb85c" stroke-width="2" />
                        </svg>
                    </div>

                    <div class="stat-card orange">
                        <div class="stat-header">
                            <div>
                                <div class="stat-title">Conversion Rate</div>
                                <div class="stat-value">2.49%</div>
                            </div>
                            <div class="stat-change up">84.7% ↑</div>
                        </div>
                        <svg class="mini-chart" viewBox="0 0 200 60">
                            <path d="M0,45 Q50,35 100,40 T200,30"
                                  fill="none" stroke="#f9b115" stroke-width="2" />
                        </svg>
                    </div>

                    <div class="stat-card red">
                        <div class="stat-header">
                            <div>
                                <div class="stat-title">Sessions</div>
                                <div class="stat-value">44K</div>
                            </div>
                            <div class="stat-change down">-23.6% ↓</div>
                        </div>
                        <div class="mini-chart" style="display: flex; align-items: flex-end; gap: 4px; height: 60px;">
                            <div style="flex: 1; background: #e55353; height: 70%;"></div>
                            <div style="flex: 1; background: #e55353; height: 85%;"></div>
                            <div style="flex: 1; background: #e55353; height: 60%;"></div>
                            <div style="flex: 1; background: #e55353; height: 90%;"></div>
                            <div style="flex: 1; background: #e55353; height: 75%;"></div>
                            <div style="flex: 1; background: #e55353; height: 95%;"></div>
                            <div style="flex: 1; background: #e55353; height: 80%;"></div>
                        </div>
                    </div>
                </div>

                <!-- Traffic Chart -->
                <div class="chart-card">
                    <div class="chart-header">
                        <div>
                            <div class="chart-title">Traffic</div>
                            <div class="chart-subtitle">January - July 2023</div>
                        </div>
                        <div class="time-filter">
                            <button class="filter-btn active">Day</button>
                            <button class="filter-btn">Month</button>
                            <button class="filter-btn">Year</button>
                            <button class="filter-btn">🔄</button>
                        </div>
                    </div>

                    <div class="chart-canvas">
                        <svg width="100%" height="100%" viewBox="0 0 1000 300">
                            <line x1="0" y1="50" x2="1000" y2="50" stroke="#e4e7eb" stroke-width="1" />
                            <line x1="0" y1="125" x2="1000" y2="125" stroke="#e4e7eb" stroke-width="1" />
                            <line x1="0" y1="200" x2="1000" y2="200" stroke="#e4e7eb" stroke-width="1" />
                            <line x1="0" y1="275" x2="1000" y2="275" stroke="#e4e7eb" stroke-width="1" />

                            <text x="10" y="55" font-size="12" fill="#8a93a2">200</text>
                            <text x="10" y="130" font-size="12" fill="#8a93a2">150</text>
                            <text x="10" y="205" font-size="12" fill="#8a93a2">100</text>
                            <text x="10" y="280" font-size="12" fill="#8a93a2">50</text>

                            <path d="M50,70 Q150,250 250,200 T450,50 T650,100 T850,180 T950,240"
                                  fill="none" stroke="#2eb85c" stroke-width="3" />
                            <path d="M50,50 Q150,120 250,280 T450,90 T650,80 T850,150 T950,250"
                                  fill="none" stroke="#5856d6" stroke-width="3" />

                            <text x="50" y="295" font-size="12" fill="#8a93a2">January</text>
                            <text x="250" y="295" font-size="12" fill="#8a93a2">February</text>
                            <text x="450" y="295" font-size="12" fill="#8a93a2">March</text>
                            <text x="650" y="295" font-size="12" fill="#8a93a2">April</text>
                            <text x="850" y="295" font-size="12" fill="#8a93a2">May</text>
                        </svg>
                    </div>

                    <div class="chart-stats">
                        <div class="chart-stat-item">
                            <div class="chart-stat-label">Visits</div>
                            <div class="chart-stat-value">29,703 Users</div>
                            <div class="chart-stat-percent">(40%)</div>
                        </div>
                        <div class="chart-stat-item">
                            <div class="chart-stat-label">Unique</div>
                            <div class="chart-stat-value">24,093 Users</div>
                            <div class="chart-stat-percent">(20%)</div>
                        </div>
                        <div class="chart-stat-item">
                            <div class="chart-stat-label">Pageviews</div>
                            <div class="chart-stat-value">78,706 Views</div>
                            <div class="chart-stat-percent">(60%)</div>
                        </div>
                        <div class="chart-stat-item">
                            <div class="chart-stat-label">New Users</div>
                            <div class="chart-stat-value">22,123 Users</div>
                            <div class="chart-stat-percent">(80%)</div>
                        </div>
                        <div class="chart-stat-item">
                            <div class="chart-stat-label">Bounce Rate</div>
                            <div class="chart-stat-value">40.15%</div>
                        </div>
                    </div>
                </div>

                <!-- Users Table -->
                <div class="table-card">
                    <div class="table-header">
                        <div class="table-title">Recent Users</div>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Email</th>
                                <th>Status</th>
                                <th>Role</th>
                                <th>Last Active</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>John Doe</td>
                                <td>john@example.com</td>
                                <td><span class="status-badge success">Active</span></td>
                                <td>Admin</td>
                                <td>2 mins ago</td>
                                <td>
                                    <button class="action-btn edit">Edit</button>
                                    <button class="action-btn delete">Delete</button>
                                </td>
                            </tr>
                            <tr>
                                <td>Jane Smith</td>
                                <td>jane@example.com</td>
                                <td><span class="status-badge warning">Pending</span></td>
                                <td>User</td>
                                <td>15 mins ago</td>
                                <td>
                                    <button class="action-btn edit">Edit</button>
                                    <button class="action-btn delete">Delete</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Products Management Page -->
            <div class="page-content" id="page-products">
                <div class="chart-card">
                    <div class="toolbar">
                        <div class="search-bar">
                            <input type="text" placeholder="Tìm kiếm sản phẩm..." id="searchProduct">
                            <span class="search-icon">🔍</span>
                        </div>
                        <div class="filter-group">
                            <select class="form-select" style="width: auto;">
                                <option>Tất cả danh mục</option>
                                <option>Điện thoại</option>
                                <option>Laptop</option>
                                <option>Phụ kiện</option>
                            </select>
                            <button class="btn-primary" onclick="showPage('add-product')">
                                <span>➕</span>
                                Thêm sản phẩm
                            </button>
                        </div>
                    </div>

                    <div class="product-management-grid" id="productsGrid"></div>
                </div>
            </div>

            <!-- Add Product Page -->
            <div class="page-content" id="page-add-product">
                <div class="form-card">
                    <h2 style="margin-bottom: 30px;">Thêm sản phẩm mới</h2>
                    <form id="addProductForm" onsubmit="handleAddProduct(event)">
                        <div class="form-row">
                            <div class="form-group">
                                <label class="form-label">Tên sản phẩm *</label>
                                <input type="text" class="form-input" required placeholder="VD: iPhone 15 Pro Max 256GB">
                            </div>
                            <div class="form-group">
                                <label class="form-label">Danh mục *</label>
                                <select class="form-select" required>
                                    <option value="">Chọn danh mục</option>
                                    <option>Điện thoại</option>
                                    <option>Laptop</option>
                                    <option>Tablet</option>
                                    <option>Smartwatch</option>
                                    <option>Phụ kiện</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label class="form-label">Giá bán *</label>
                                <input type="number" class="form-input" required placeholder="29990000">
                            </div>
                            <div class="form-group">
                                <label class="form-label">Giá gốc</label>
                                <input type="number" class="form-input" placeholder="34990000">
                            </div>
                            <div class="form-group">
                                <label class="form-label">Số lượng *</label>
                                <input type="number" class="form-input" required placeholder="100">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label class="form-label">Thương hiệu</label>
                                <select class="form-select">
                                    <option value="">Chọn thương hiệu</option>
                                    <option>Apple</option>
                                    <option>Samsung</option>
                                    <option>Xiaomi</option>
                                    <option>OPPO</option>
                                    <option>Vivo</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Màu sắc</label>
                                <input type="text" class="form-input" placeholder="VD: Đen, Trắng, Xanh">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Mô tả sản phẩm</label>
                            <textarea class="form-textarea" placeholder="Nhập mô tả chi tiết..."></textarea>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Hình ảnh sản phẩm</label>
                            <div class="upload-area" onclick="document.getElementById('fileInput').click()">
                                <div class="upload-icon">📁</div>
                                <div>Click để chọn ảnh hoặc kéo thả vào đây</div>
                            </div>
                            <input type="file" id="fileInput" accept="image/*" multiple style="display: none;" onchange="previewImages(event)">
                            <div class="image-preview" id="imagePreview"></div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="submit-btn">Thêm sản phẩm</button>
                            <button type="button" class="cancel-btn" onclick="showPage('products')">Hủy</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Other pages (orders, customers, categories, settings) -->
            <div class="page-content" id="page-orders">
                <div class="table-card">
                    <div class="table-header">
                        <div class="table-title">Quản lý đơn hàng</div>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>Mã đơn</th>
                                <th>Khách hàng</th>
                                <th>Sản phẩm</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                                <th>Ngày đặt</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>#ORD-001</td>
                                <td>Nguyễn Văn A</td>
                                <td>iPhone 15 Pro Max</td>
                                <td>29.990.000₫</td>
                                <td><span class="status-badge success">Đã giao</span></td>
                                <td>28/09/2024</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="page-content" id="page-customers">
                <div class="table-card">
                    <div class="table-header">
                        <div class="table-title">Quản lý khách hàng</div>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>Tên</th>
                                <th>Email</th>
                                <th>Số ĐT</th>
                                <th>Địa chỉ</th>
                                <th>Tổng đơn</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Nguyễn Văn A</td>
                                <td>nguyenvana@email.com</td>
                                <td>0901234567</td>
                                <td>TP.HCM</td>
                                <td>5</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="page-content" id="page-categories">
                <div class="form-card">
                    <h2>Quản lý danh mục</h2>
                    <button class="btn-primary" onclick="alert('Thêm danh mục')">Thêm danh mục</button>
                </div>
            </div>

            <div class="page-content" id="page-settings">
                <div class="form-card">
                    <h2>Cài đặt hệ thống</h2>
                    <div class="form-group">
                        <label class="form-label">Tên cửa hàng</label>
                        <input type="text" class="form-input" value="Tech Store">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/ad.js"></script>
</body>

