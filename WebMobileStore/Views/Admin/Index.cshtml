@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Mobile Store</title>
    <link rel="stylesheet" href="~/css/ad.css" />
</head>
<body>
    <!-- Sidebar -->
    @* @Html.Partial("_Sidebar") *@

    <!-- Main Content Container -->
    <div class="admin-container">
        <!-- Dynamic Content Area - Load các PartialView vào đây -->
        <div id="mainContent">
            <!-- Dashboard sẽ load mặc định --> 
            @await Html.PartialAsync("Dashboard")
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/ad.js"></script>

    <script>
        // Load PartialView động bằng AJAX
        function loadPage(pageName) {
            $.ajax({
                url: '/Admin/' + pageName,
                type: 'GET',
                success: function(data) {
                    $('#mainContent').html(data);
                },
                error: function() {
                    alert('Không thể tải trang!');
                }
            });
        }
    </script>
</body>
</html>