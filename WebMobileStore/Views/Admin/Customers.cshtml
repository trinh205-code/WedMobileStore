@model IEnumerable<WebMobileStore.Models.Entity.Users>
@using WebMobileStore.Models.Entity.Enums


@section Styles {
    <link rel="stylesheet" href="~/css/brand.css" />
}

@{
    ViewBag.Title = "Quản lý khách hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content">
    <h2 class="page-title">Quản lý khách hàng</h2>

    <div class="filter-bar">
        <form method="get" class="brand-filter-bar">
            <input type="text" name="search" placeholder="Tìm khách hàng..."
                   value="@ViewBag.Search" class="brand-filter-search" />

            <select name="role" class="brand-filter-select">
                <option value="">-- Tất cả quyền --</option>

                @if (ViewBag.Role == "Admin")
                {
                    <option value="Admin" selected>Admin</option>
                    <option value="User">Khách</option>
                }
                else if (ViewBag.Role == "User")
                {
                    <option value="Admin">Admin</option>
                    <option value="User" selected>Khách</option>
                }
                else
                {
                    <option value="Admin">Admin</option>
                    <option value="User">Khách</option>
                }
            </select>

            <button type="submit" class="brand-filter-btn">Lọc</button>
        </form>
    </div>


    <div class="table-card">
        @if (Model != null && Model.Any())
        {
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên</th>
                        <th>Email</th>
                        <th>Số ĐT</th>
                        <th>Địa chỉ</th>
                        <th>Quyền</th> 
                        <th>Tổng đơn</th>
                        <th>Ngày tham gia</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserId</td>
                            <td>@(user.FullName ?? "N/A")</td>
                            <td>@(user.Email ?? "N/A")</td>
                            <td>@(user.Phone ?? "N/A")</td>
                            <td>
                                @if (user.Address != null)
                                {
                                    @($"{user.Address.Ward}, {user.Address.District}, {user.Address.City}")
                                }
                                else
                                {
                                    <span class="text-muted">Chưa có</span>
                                }
                            </td>

                            <td>
                                @if (user.role == Role.Admin)
                                {
                                    <span >Admin</span>
                                }
                                else
                                {
                                    <span >Khách</span>
                                }
                            </td>

                            <td>@(user.Orders?.Count() ?? 0)</td>
                            <td>@user.CreatedAt.ToString("dd/MM/yyyy")</td>

                            <td>
                                <a asp-controller="Admin" asp-action="EditUser" asp-route-id="@user.UserId"
                                   class="action-btn edit">Sửa</a>

                                <form asp-controller="Admin" asp-action="SetAdmin"
                                      asp-route-id="@user.UserId" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="action-btn admin-btn">
                                        Cấp quyền Admin
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        }
        else
        {
            <div class="empty-state">
                <p>👥 Chưa có khách hàng nào</p>
            </div>
        }
    </div>
</div>

@if (ViewBag.TotalPages > 1)
{
    <div class="pagination-container">
        <ul class="pagination">

            @if (ViewBag.CurrentPage > 1)
            {
                <li>
                    <a href="@Url.Action("Customers", new { page = ViewBag.CurrentPage - 1, search = ViewBag.Search, role = ViewBag.Role })">« Trước</a>
                </li>
            }

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="@(i == ViewBag.CurrentPage ? "active" : "")">
                    <a href="@Url.Action("Customers", new { page = i, search = ViewBag.Search, role = ViewBag.Role })">@i</a>
                </li>
            }

            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li>
                    <a href="@Url.Action("Customers", new { page = ViewBag.CurrentPage + 1, search = ViewBag.Search, role = ViewBag.Role })">Sau »</a>
                </li>
            }

        </ul>
    </div>
}
