@model IEnumerable<WebMobileStore.Models.Entity.Products>
@section Styles {
    <link rel="stylesheet" href="~/css/products.css" asp-append-version="true" />
}

@{
    ViewBag.Title = "Quản lý sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content">
    <div class="page-header">
        <h2 class="page-title">Quản lý sản phẩm</h2>
        <a asp-controller="Admin" asp-action="AddProduct" class="btn-primary">
            <span>➕</span> Thêm sản phẩm
        </a>
    </div>

    <!-- 🔍 Thanh tìm kiếm và lọc -->
    <form asp-controller="Admin" asp-action="Products" method="get" class="filter-bar">
        <input type="text" name="searchTerm" placeholder="Tìm theo tên sản phẩm..."
               value="@Context.Request.Query["searchTerm"]" class="filter-search" />

        <select name="categoryId" class="filter-select">
            <option value="">-- Loại sản phẩm --</option>
            @foreach (var c in (IEnumerable<WebMobileStore.Models.Entity.Categories>)ViewBag.Categories)
            {
                var isSelected = Context.Request.Query["categoryId"] == c.CategoryId.ToString();

                if (isSelected)
                {
                    <option value="@c.CategoryId" selected>@c.CategoryName</option>
                }
                else
                {
                    <option value="@c.CategoryId">@c.CategoryName</option>
                }
            }

        </select>

        <select name="brandId" class="filter-select">
            <option value="">-- Thương hiệu --</option>
            @foreach (var b in (IEnumerable<WebMobileStore.Models.Entity.Brand>)ViewBag.Brands)
            {
                var isSelected = Context.Request.Query["brandId"] == b.BrandId.ToString();

                if (isSelected)
                {
                    <option value="@b.BrandId" selected>@b.BrandName</option>
                }
                else
                {
                    <option value="@b.BrandId">@b.BrandName</option>
                }
            }

        </select>

        <button type="submit" class="btn-primary filter-btn">Tìm kiếm</button>
    </form>


    <div class="table-card">
        @if (Model != null && Model.Any())
        {
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Thương hiệu</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ProductId</td>

                            <td>
                                @if (product.ProductImages != null && product.ProductImages.Any())
                                {
                                    var firstImage = product.ProductImages.First().ImageUrl;
                                    <img src="@firstImage" alt="Ảnh sản phẩm" style="width: 60px; height: 60px; object-fit: cover; border-radius: 5px;" />
                                }
                                else
                                {
                                    <span>Không có ảnh</span>
                                }
                            </td>

                            <td>@(product.ProductsName ?? "N/A")</td>
                            <td>@(product.Brand?.BrandName ?? "N/A")</td>
                            <td>@product.Price.ToString("N0")₫</td>
                            <td>@product.Quantity</td>

                            <td>
                                @if (product.IsActive)
                                {
                                    <span class="status-badge success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="status-badge danger">Ngừng bán</span>
                                }
                            </td>

                            <td>
                                <a asp-controller="Admin" asp-action="EditProduct" asp-route-id="@product.ProductId" class="action-btn edit">Sửa</a>
                                <form asp-controller="Admin" asp-action="DeleteProduct" asp-route-id="@product.ProductId" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc muốn xóa sản phẩm này?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="action-btn delete">Xóa</button>
                                </form>
                                <a asp-controller="Admin" asp-action="Variant" asp-route-id="@product.ProductId" class="action-btn edit">Thêm Chi tiết</a>
                                <form asp-controller="Admin" asp-action="ActiveProduct"
                                      asp-route-id="@product.ProductId" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="action-btn edit">
                                        @(product.IsActive ? "TẮT" : "BẬT")
                                    </button>
                                </form>


                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <p>📦 Chưa có sản phẩm nào</p>
                <a asp-controller="Admin" asp-action="AddProduct" class="btn-primary">Thêm sản phẩm đầu tiên</a>
            </div>
        }
    </div>
</div>